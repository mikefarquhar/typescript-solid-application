{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended-type-checked",
    "plugin:solid/typescript",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": true,
    "tsconfigRootDir": "./"
  },
  "plugins": ["@typescript-eslint", "solid"],
  "overrides": [
    {
      "files": ["**/*.js", "**/*.jsx"],
      "extends": ["plugin:@typescript-eslint/disable-type-checked"]
    }
  ]
}
